<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style type="com.codenvy.plugin.angularjs.core.client.menu.yeoman.FoldingPanelImpl.FoldingCss">
        .mainPanel-layout {
            display: flex;
            display: -webkit-flex;

            flex-flow: row;
            -webkit-flex-flow: row;

            justify-content: flex-start;
            -webkit-justify-content: flex-start;

            align-items: center;
            -webkit-align-items: center;
        }

        .toggleButton-container {
            margin-right: 2px;
            width: 16px;
            height: 16px;

            display: flex;
            display: -webkit-flex;

            flex-flow: column;
            -webkit-flex-flow: column;

            justify-content: center;
            -webkit-justify-content: center;

            align-items: center;
            -webkit-align-items: center;
        }

        .toggleButton {
            cursor: pointer;

            -webkit-transform: rotate(0turn);
            transform: rotate(0turn);

            transition: transform 100ms;
            transition: -webkit-transform 100ms;
        }

        .toggleButton-closed {
            -webkit-transform: literal('rotate(-0.25turn)');
            transform: literal('rotate(-0.25turn)'); /* moz>16 ie>10 chrome>36 safari? */
        }

        .rowTabular {
            background-color: #646464;
        }

        .folded {
            display: none;
        }

        .item-name {
            margin-left: 10px;
        }

    </ui:style>

    <g:HTMLPanel addStyleNames="{style.mainPanel-layout}">
        <g:VerticalPanel width="100%">
            <g:Grid width="100%" styleName="{style.rowTabular}">
                <g:row>
                    <g:customCell>
                        <g:Label ui:field="foldingTitle"/>
                    </g:customCell>
                    <g:customCell>
                        <g:Label ui:field="toggleButton" addStyleNames="{style.toggleButton-container} {style.toggleButton}" text="&#x25BC;"
                                 horizontalAlignment="ALIGN_RIGHT"
                                 wordWrap="false"/>
                    </g:customCell>
                </g:row>
            </g:Grid>
            <g:FlowPanel ui:field="togglePanel" addStyleNames="{style.folded}">
            </g:FlowPanel>
        </g:VerticalPanel>
    </g:HTMLPanel>
</ui:UiBinder>