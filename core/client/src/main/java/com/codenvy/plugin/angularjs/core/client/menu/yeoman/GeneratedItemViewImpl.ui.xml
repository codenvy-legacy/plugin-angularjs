<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:svgui='urn:import:org.vectomatic.dom.svg.ui'>

    <ui:with field="uiResources" type="com.codenvy.plugin.angularjs.core.client.editor.AngularJSResources"/>

    <ui:style>
        .item-name {
            margin-left: 10px;
        }

        .trashImage {
            width: 15px;
            height: 15px;
            cursor: pointer;
        }

    </ui:style>
    <g:Grid width="100%" ui:field="gridEntry">
        <g:row>
            <g:customCell>
                <g:Label text="myController1" ui:field="textEntry" addStyleNames="{style.item-name}"/>
            </g:customCell>
            <g:customCell>
                <g:FlowPanel addStyleNames="gwt-button {style.trashImage}">
                    <svgui:SVGPushButton ui:field="trashButton" resource="{uiResources.trashIcon}">
                    </svgui:SVGPushButton>
                </g:FlowPanel>
            </g:customCell>
        </g:row>
    </g:Grid>
</ui:UiBinder>